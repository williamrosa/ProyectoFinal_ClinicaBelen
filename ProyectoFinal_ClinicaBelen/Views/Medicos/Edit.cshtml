@model ProyectoFinal_ClinicaBelen.Models.Medico

@{ ViewBag.Title = "Edit"; }

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="box box-primary mt">

        <div class="box-header">
            <h4>Editar Médico: @Model.Nombres @Model.Apellidos</h4>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Medico)

        <div class="box-body">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese el nombre del médico" } })
                    @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Apellidos, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrse el apellido del médico" } })
                    @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-4 col-md-4 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Genero, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Genero, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese el genero del paciente m o f" } })
                    @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-4 col-md-4 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.FechaNacimiento, htmlAttributes: new { @class = "control-label" })
                    <input type="text" name="FechaNacimiento" value="@ViewBag.FechaNacimiento" class="form-control" required />
                </div>

                <div class="col-lg-4 col-md-4 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese el email del médico" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-4 col-md-4 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Direccion, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese la dirección completa del médico" } })
                    @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-4 col-md-4 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Movil, htmlAttributes: new { @class = "control-label" })
                    <input type="text" name="Movil" value="@ViewBag.Movil" id="Movil" class="form-control" />
                </div>

                <div class="col-lg-4 col-md-4 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Fecha_Creacion, htmlAttributes: new { @class = "control-label" })
                    <input type="text" name="Fecha_Creacion" value="@ViewBag.Fecha_Creacion" class="form-control" required />
                </div>

                <div class="col-lg-4 col-md-4 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
                    <div class="checkbox">
                        Marcar: &emsp; &emsp;
                        @Html.EditorFor(model => model.IsActive)
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Numero_documento, htmlAttributes: new { @class = "control-label" })
                    <input type="text" name="Numero_documento" value="@ViewBag.Dui" id="Numero_documento" class="form-control" />
                </div>

                <div class="col-lg-4 col-md-4 col-xs-12 mb-3">
                    <label class="control-label">Categoría médico</label>
                    @Html.DropDownList("Id_Categoria", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Id_Categoria, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="box-footer">
            <input type="submit" value="Actualizar" class=" btn btn-primary" />
        </div>

    </div>
}

<div>
    @Html.ActionLink(" ", "Index", null, htmlAttributes: new { @class = "glyphicon glyphicon-arrow-left btn btn-warning" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#Movil').inputmask("mask", { "mask": "9999-9999" });
            $('#Numero_documento').inputmask("mask", { "mask": "99999999-9" });
        });</script>
}
