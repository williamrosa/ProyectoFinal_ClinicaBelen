@model IEnumerable<ProyectoFinal_ClinicaBelen.Models.Medico>

@{ ViewBag.Title = "Lista de médicos"; }

<input type="hidden" id="txtOcultar" value="@ViewBag.Accion" />
<div class="box box-primary" style="margin-top:20px;">
    <div class="box-header">
        <h4 class="box-title">Listado de Médicos</h4>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-success" name="btnCrear" id="btnCrear" onclick="Crear()">
                <i class="fas fa-plus-square"></i> Crear Nuevo
            </button>
        </div>
    </div>

    <div class="box-body">
        @using (Html.BeginForm())
        {
            <input type="hidden" id="txtOcultar" value="@ViewBag.Accion" />
            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-6" id="Filtro">
                    <div class="col-sm-10 form-inline">
                        <input type="text" name="txtBuscar" class="form-control col-sm-3" placeholder="Ingrese nombre o apellido" />
                        <input class="btn btn-primary" type="submit" id="btnEnviar" value="Buscar" />
                    </div>
                </div>
            </div>
        }
        <table id="MedicoTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Genero</th>
                    <th>Fecha de nacimiento</th>
                    <th>Email</th>
                    <th>DUI</th>
                    <th></th>
                </tr>
            </thead>
        </table>
        <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    </div>
</div>
<h4>@ViewBag.ex</h4>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>
    var Popup, dataTable;
    $(document).ready(function () {
        $.noConflict();
        var table = $('MedicoTable').DataTable();
        table = $("#MedicoTable").DataTable({
            "ajax": {
                "url": "/Medicos/GetData",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "Nombres" },
                { "data": "Apellidos" },
                { "data": "Genero" },
                { "data": "Direccion" },
                { "data": "Email" },
                { "data": "Numero_documento" },
                {
                    "data": "Id_Medico", "render": function (data) {
                        var datos = typeof (+data[7])
                        console.log(datos);
                    return "<a class='btn btn-default btn-sm' href='@Url.Action("Edit", "Medicos")/" + data + "'><i class='fa fa-pencil'></i> Edit</a> <a class='btn btn-danger btn-sm' style='margin-left:5px' href='@Url.Action("Delete", "Medicos")/" + data + "'><i class='fa fa-trash'></i> Delete</a>";
                    },
                        "orderable": false,
                        "searchable":false,
                        "width":"150px"
                    }
            ],
            "language": {

                "emptyTable": "tabla vacia, por favor has click en boton <b>Nuevo</b> "
            }
        });
    });


</script>
<script>
    //function Busquedax() {
    //    var busqueda = $("#txtBuscar").val();
    //    alert(busqueda);
    //}
    $(document).ready(function () {
        if ($("#txtOcultar").val() == "Insertado") {
            swal("Registro Guardado!", "Datos  guardados correctamente!", "success");
        }
        else if ($("#txtOcultar").val() == "Editado") {
            swal("Registro Editado!", "Datos editados correctamente!", "success");
        }
        else if ($("#txtOcultar").val() == "Eliminado") {
            swal("Registro Eliminado!", "Datos  Eliminados correctamente!", "error");
        }
    });</script>


<script>
    function Crear() {
        document.getElementById("btnCrear")
        location.href = "/Medicos/Create";
    }

    
</script>

