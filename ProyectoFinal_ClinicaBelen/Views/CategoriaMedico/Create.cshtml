@model ProyectoFinal_ClinicaBelen.Models.CategoriaMedico

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="box box-primary mt">
        <div class="box-header">
            <h4 class="box-title">Crear categoría</h4>
        </div>

        <div class="box-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.NombreCategoria, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.NombreCategoria, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresa la categoría" } })
                    @Html.ValidationMessageFor(model => model.NombreCategoria, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="box-footer">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink(" ", "Index", null, htmlAttributes: new { @class = "glyphicon glyphicon-arrow-left btn btn-warning" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
