@model ProyectoFinal_ClinicaBelen.Models.Paciente

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="box box-primary mt">
        <div class="box-header">
            <h4>Editar Paciente: @Model.Nombres @Model.Apellidos</h4>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Paciente)

        <div class="box-body">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresa el nombre del paciente" } })
                    @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Apellidos, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresa el apellido del paciente" } })
                    @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Genero, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Genero, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.FechaNacimiento, htmlAttributes: new { @class = "control-label" })
                    <input type="text" name="FechaNacimiento" value="@ViewBag.FechaNacimiento" class="form-control" required />
                    @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresa el correo del paciente" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Direccion, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresa la dirección del paciente" } })
                    @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Numero_documento, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Numero_documento, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresa el numero documento del paciente" } })
                    @Html.ValidationMessageFor(model => model.Numero_documento, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Movil, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Movil, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresa el telefono del paciente" } })
                    @Html.ValidationMessageFor(model => model.Movil, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.Fecha_Creacion, htmlAttributes: new { @class = "control-label" })
                    <input type="text" name="Fecha_Creacion" value="@ViewBag.Fecha_Creacion" class="form-control" required />
                    @Html.ValidationMessageFor(model => model.Fecha_Creacion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="box-footer">
            <input type="submit" value="Editar" class="btn btn-primary" />
        </div>

    </div>
}

<div class="mt">
    @Html.ActionLink(" ", "Index", null, htmlAttributes: new { @class = "glyphicon glyphicon-arrow-left btn btn-warning" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
