@model IEnumerable<ProyectoFinal_ClinicaBelen.Models.Paciente>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-sm-10"></div>
    @Html.ActionLink("Agregar Paciente", "Create", new { }, new { @class = "btn btn-primary" })
</div>

@using (Html.BeginForm())
{

    <input type="hidden" id="txtOcultar" value="@ViewBag.Accion" />
    <div class="form-inline">
        <input type="text" name="txtBuscar" class="form-control" placeholder="Ingrese una palabra" />
        <input class="btn btn-primary" type="submit" id="btnEnviar" value="Buscar" />
    </div>
    <br />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero_documento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Creacion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Creacion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Paciente }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Paciente }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Paciente })
            </td>
        </tr>
    }

</table>
