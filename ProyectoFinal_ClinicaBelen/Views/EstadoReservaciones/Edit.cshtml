@model ProyectoFinal_ClinicaBelen.Models.EstadoReservacion

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="box box-primary mt">

        <div class="box-header">
            <h4>Editar estado de resevación: @Model.EstadoDeCita</h4>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_EstadoReservacion)

        <div class="box-body">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.EstadoDeCita, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.EstadoDeCita, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EstadoDeCita, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="box-footer">
            <input type="submit" value="Editar" class="btn btn-primary" />
        </div>

    </div>
}

<div class="mt">
    @Html.ActionLink(" ", "Index", null, htmlAttributes: new { @class = "glyphicon glyphicon-arrow-left btn btn-warning" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
