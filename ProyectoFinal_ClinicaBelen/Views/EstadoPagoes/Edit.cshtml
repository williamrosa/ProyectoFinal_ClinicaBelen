@model ProyectoFinal_ClinicaBelen.Models.EstadoPago

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="box box-primary mt">

        <div class="box-header">
            <h4>Editar Estado de Pago: @Model.EstadoDePago</h4>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_TipoDePago)

        <div class="box-body">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12 mb-3">
                    @Html.LabelFor(model => model.EstadoDePago, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.EstadoDePago, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EstadoDePago, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="box-footer">
            <input type="submit" value="Editar" class="btn btn-primary" />
        </div>
    </div>
}

<div class="mt">
    @Html.ActionLink(" ", "Index", null, htmlAttributes: new { @class = "glyphicon glyphicon-arrow-left btn btn-warning" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
